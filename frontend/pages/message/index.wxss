.container {
  padding: 20rpx;
}

.message-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
  position: relative;
}

.tab-item.active {
  color: #1296db;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.message-list {
  background: #fff;
  border-radius: 8rpx;
}

.message-item {
  position: relative;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.message-item.read {
  opacity: 0.8;
}

.message-dot {
  position: absolute;
  top: 40rpx;
  left: 10rpx;
  width: 16rpx;
  height: 16rpx;
  background: #ff4d4f;
  border-radius: 50%;
}

.message-content {
  margin-left: 30rpx;
}

.message-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
  font-weight: bold;
}

.message-brief {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.message-time {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
}

.admin-actions {
  margin-bottom: 20rpx;
}

.send-notice-btn {
  background: #1296db;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999;
}

.modal-content {
  width: 80%;
  background: white;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.close-btn {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 20rpx;
}

.notice-input {
  border: 1rpx solid #eee;
  padding: 16rpx;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.notice-textarea {
  border: 1rpx solid #eee;
  padding: 16rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 200rpx;
}

.modal-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.cancel-btn, .confirm-btn {
  margin: 0;
  min-width: 160rpx;
  font-size: 28rpx;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #1296db;
  color: white;
} 