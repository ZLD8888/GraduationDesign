.container {
  padding: 20rpx;
}

.search-bar {
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.search-bar input {
  background: #f5f5f5;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
}

.grid-container {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding: 20rpx 0;
}

.grid-item {
  background: #fff;
  padding: 30rpx;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.grid-item image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.grid-item text {
  font-size: 28rpx;
  color: #333;
}

.recent-section {
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-top: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
}

.more {
  font-size: 28rpx;
  color: #1296db;
}

.list .item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #eee;
}

.item-main {
  flex: 1;
}

.item-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.item-time {
  font-size: 24rpx;
  color: #999;
}

.item-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.item-status.pending {
  background: #e6f7ff;
  color: #1890ff;
}

.item-status.ongoing {
  background: #f6ffed;
  color: #52c41a;
}

.item-status.completed {
  background: #f5f5f5;
  color: #999;
} 

.no-activity {
  text-align: center;
  color: #999; /* 灰色 */
  margin: 20px 0; /* 上下边距 */
}