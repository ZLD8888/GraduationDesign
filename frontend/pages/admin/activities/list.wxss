.container {
  padding: 20rpx;
}

.status-tabs {
  display: flex;
  background: #fff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 0;
}

.tab-item.active {
  color: #1296db;
  font-weight: bold;
  position: relative;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 40rpx;
  height: 4rpx;
  background: #1296db;
  border-radius: 2rpx;
}

.activity-list {
  margin-top: 20rpx;
}

.activity-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.activity-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.activity-name {
  font-size: 32rpx;
  font-weight: bold;
}

.activity-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-planned {
  background: #e6f7ff;
  color: #1890ff;
}

.status-ongoing {
  background: #f6ffed;
  color: #52c41a;
}

.status-completed {
  background: #f5f5f5;
  color: #666;
}

.status-cancelled {
  background: #fff1f0;
  color: #f5222d;
}

.activity-info {
  margin-bottom: 20rpx;
}

.info-item {
  font-size: 28rpx;
  margin-bottom: 10rpx;
}

.label {
  color: #666;
}

.activity-description {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
  padding: 10rpx 0;
  border-top: 1px solid #eee;
  border-bottom: 1px solid #eee;
}

.activity-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.organizer {
  font-size: 26rpx;
  color: #999;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.btn-edit, .btn-delete {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 4rpx;
}

.btn-edit {
  background: #1296db;
  color: #fff;
}

.btn-delete {
  background: #ff4d4f;
  color: #fff;
}

.bottom-buttons {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  z-index: 1000;
}

.add-btn, .calendar-btn, .history-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: #4CAF50;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.calendar-btn {
  background-color: #ffffff;
}

.history-btn {
  background-color: #ffffff;
}

.add-btn .add-icon {
  color: white;
  font-size: 60rpx;
  font-weight: bold;
}

.calendar-btn image, .history-btn image {
  width: 50rpx;
  height: 50rpx;
} 