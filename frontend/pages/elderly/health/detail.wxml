<view class="container">
  <view class="detail-card">
    <view class="record-time">{{record.recordTime}}</view>
    
    <view class="data-section">
      <view class="data-item">
        <text class="label">体温</text>
        <text class="value">{{record.temperature}}℃</text>
      </view>
      <view class="data-item">
        <text class="label">血压</text>
        <text class="value">{{record.bloodPressureSystolic}}/{{record.bloodPressureDiastolic}}mmHg</text>
      </view>
      <view class="data-item">
        <text class="label">心率</text>
        <text class="value">{{record.heartRate}}次/分</text>
      </view>
      <view class="data-item">
        <text class="label">血糖</text>
        <text class="value">{{record.bloodSugar}}mmol/L</text>
      </view>
    </view>

    <view class="note-section" wx:if="{{record.note}}">
      <view class="section-title">备注</view>
      <view class="note-content">{{record.note}}</view>
    </view>
  </view>

  <view class="action-buttons" wx:if="{{isStaff}}">
    <button class="btn-delete" bindtap="handleDelete">删除记录</button>
  </view>
</view> 