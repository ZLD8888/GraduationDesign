<view class="container">
  <view class="grid-container">
    <navigator url="/pages/elderly/activities/list" class="grid-item">
      <image src="/images/activity.png" mode="aspectFit"></image>
      <text>近期活动</text>
    </navigator>

    <navigator url="/pages/service/appointment/index" class="grid-item">
      <image src="/images/service.png" mode="aspectFit"></image>
      <text>服务预约</text>
    </navigator>

    <navigator url="/pages/elderly/health/self" class="grid-item">
      <image src="/images/health.png" mode="aspectFit"></image>
      <text>自己健康监控</text>
    </navigator>
  </view>

  <view class="recent-section">
    <view class="section-header">
      <text class="title">近期活动</text>
    </view>
    <view class="list">
      <view class="item" wx:for="{{recentItems}}" wx:key="id" bindtap="goToDetail" data-id="{{item.id}}" data-type="{{item.type}}">
        <view class="item-main">
          <text class="item-title">{{item.name}}</text>
          <text class="item-time">{{item.startTime}}</text>
        </view>
        <text class="item-status {{item.activityStatus}}">{{item.statusText}}</text>
      </view>
    </view>
  </view>
</view> 