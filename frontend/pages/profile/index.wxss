.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.user-card {
  background: #fff;
  padding: 40rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.avatar-wrapper {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
}

.user-info {
  flex: 1;
}

.username {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.role {
  font-size: 28rpx;
  color: #666;
}

.function-list {
  background: #fff;
  margin-bottom: 40rpx;
}

.function-item {
  display: flex;
  align-items: center;
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
}

.function-item:last-child {
  border-bottom: none;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
}

.arrow {
  font-size: 30rpx;
  color: #999;
}

.logout-section {
  padding: 0 40rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #ff4d4f;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
}

.logout-btn::after {
  border: none;
} 