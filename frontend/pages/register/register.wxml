<view  style="background-color: #f5f5f5; height: 100%; width: 100%; margin-top: 100px;">
  <view class="register-box" style="background-color: #fff; padding: 20px; border-radius: 10px; box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);">
    <view class="title">注册</view>
    <form bindsubmit="handleRegister">
      <view class="input-group" style="margin-bottom: 10px;">
        <input type="text" name="phone" placeholder="请输入手机号" style="background-image: url('/images/phone.png'); background-size: 20px; background-position: 10px center; background-repeat: no-repeat; padding-left: 40px;"/>
      </view>
      <view class="input-group" style="margin-bottom: 10px;" >
        <input type="text" name="name" placeholder="请输入姓名" style="background-image: url('/images/name.png'); background-size: 20px; background-position: 10px center; background-repeat: no-repeat; padding-left: 40px;"/>
      </view>
      <view class="input-group" style="margin-bottom: 10px;">
        <input type="password" name="password" placeholder="请输入密码" style="background-image: url('/images/password.png'); background-size: 20px; background-position: 10px center; background-repeat: no-repeat; padding-left: 40px;"/>
      </view>
      <!-- <view class="input-group">
        <picker bindchange="handleRoleChange" value="{{roleIndex}}" range="{{roles}}">
          <view class="picker">
            {{roles[roleIndex] || '请选择身份'}}
          </view>
        </picker>
      </view> -->
      <button class="btn-primary" form-type="submit" style="font-size: 16px; margin-top: 30px;">注册</button>
    </form>
    <view class="login-link" bindtap="goToLogin" style="margin-top: 10px;">
      已有账号？立即登录
    </view>
  </view>
</view> 
<view style="margin-top: 10px; text-align: center; font-size: 12px; color: #888; display: flex; justify-content: center; align-items: center;">
  注册代表已经同意<span style="color: #1296db; margin-left: 5px; margin-right: 5px;">用户协议</span>以及<span style="color: #1296db; margin-left: 5px; margin-right: 5px;">隐私政策</span>
</view>