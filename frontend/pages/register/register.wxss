.register-box {
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.picker {
  width: 100%;
  height: 88rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  line-height: 88rpx;
}

.login-link {
  text-align: center;
  color: #1296db;
  margin-top: 20rpx;
}

.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.form {
  width: 100%;
}

input {
  width: 100%;
  padding: 10rpx;
  margin-bottom: 20rpx;
  border: 1px solid #ccc;
  border-radius: 5rpx;
}

button {
  width: 100%;
  padding: 10rpx;
  background-color: #1296db;
  color: white;
  border: none;
  border-radius: 5rpx;
  font-size: 16rpx;
} 