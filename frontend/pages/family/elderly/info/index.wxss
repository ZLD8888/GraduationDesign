/* pages/family/elderly/info/index.wxss */
.container {
  padding: 20rpx;
}

/* 绑定按钮样式 */
.bind-button {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.bind-icon {
  font-size: 40rpx;
  margin-right: 10rpx;
  color: #1890ff;
}

/* 老人卡片样式 */
.elderly-card {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.elderly-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.elderly-name {
  font-size: 32rpx;
  font-weight: bold;
}

.elderly-id {
  font-size: 24rpx;
  color: #999;
}

.elderly-info {
  margin-bottom: 20rpx;
}

.info-item {
  margin: 10rpx 0;
  display: flex;
  align-items: center;
}

.label {
  color: #666;
  min-width: 100rpx;
  margin-right: 0;
  flex-shrink: 0;
}

.elderly-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-detail, .btn-unbind {
  font-size: 24rpx;
  padding: 10rpx 30rpx;
  border-radius: 4rpx;
}

.btn-detail {
  background: #1890ff;
  color: #fff;
}

.btn-unbind {
  background: #ff4d4f;
  color: #fff;
}

/* 无数据提示样式 */
.no-data {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
}

.no-data text {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

/* 弹窗样式 */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-header {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  padding: 0 20rpx;
}

.modal-body {
  padding: 30rpx 20rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-group .label {
  display: block;
  margin-bottom: 10rpx;
}

.input-group input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 4rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  padding: 20rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  border-top: 1rpx solid #eee;
}

.btn-cancel, .btn-confirm {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 4rpx;
}

.btn-cancel {
  background: #f5f5f5;
  color: #666;
}

.btn-confirm {
  background: #1890ff;
  color: #fff;
}

/* 删除所有紧急联系人相关的样式 */
.emergency-contact,
.emergency-header,
.emergency-icon,
.emergency-label,
.emergency-phone,
.emergency-contact:active {
  /* 重置所有特殊样式 */
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 0;
  color: inherit;
  font-weight: normal;
  letter-spacing: normal;
}