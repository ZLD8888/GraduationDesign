.container {
  padding: 20rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

.real-time-data {
  margin-bottom: 30rpx;
}

.data-card {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.heart-rate {
  border-left: 8rpx solid #ff4d4f;
}

.card-title {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.icon {
  font-size: 36rpx;
}

.data-value {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.number {
  font-size: 64rpx;
  font-weight: bold;
  color: #333;
}

.unit {
  font-size: 24rpx;
  color: #666;
}

.update-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
}

.chart-container {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.chart-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.chart-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.time-selector {
  display: flex;
  gap: 16rpx;
}

.time-selector text {
  font-size: 24rpx;
  color: #666;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
}

.time-selector text.active {
  background: #1296db;
  color: white;
}

.chart-content {
  width: 100%;
  height: 400rpx;
}

.alert-section {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.alert-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.alert-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
  padding: 16rpx;
  background: #fff1f0;
  border-radius: 8rpx;
}

.alert-icon {
  font-size: 32rpx;
}

.alert-content {
  flex: 1;
}

.alert-message {
  font-size: 26rpx;
  color: #333;
  display: block;
}

.alert-time {
  font-size: 22rpx;
  color: #666;
}

.connection-status {
  position: fixed;
  bottom: 40rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(0, 0, 0, 0.6);
}

.status-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
}

.connected .status-dot {
  background: #52c41a;
}

.disconnected .status-dot {
  background: #ff4d4f;
}

.status-text {
  font-size: 24rpx;
  color: white;
}

.elderly-selector {
  background: white;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.picker-arrow {
  font-size: 24rpx;
  color: #999;
  margin-left: 8rpx;
} 