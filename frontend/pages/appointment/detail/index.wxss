.container {
  padding: 20rpx;
}

.detail-card {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.service-name {
  font-size: 36rpx;
  font-weight: bold;
}

.status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.status.PENDING {
  background: #e6f7ff;
  color: #1890ff;
}

.status.CONFIRMED {
  background: #f6ffed;
  color: #52c41a;
}

.status.COMPLETED {
  background: #d9d9d9;
  color: #666;
}

.status.CANCELLED {
  background: #fff1f0;
  color: #f5222d;
}

.info-section {
  margin-bottom: 30rpx;
}

.info-item {
  display: flex;
  margin-bottom: 16rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.label {
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.value {
  flex: 1;
}

.price {
  color: #f5222d;
  font-weight: bold;
}

.action-section {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 30rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.action-btn {
  font-size: 28rpx;
  padding: 16rpx 32rpx;
  border-radius: 30rpx;
  margin: 0;
}

.action-btn.confirm {
  background: #1890ff;
  color: white;
}

.action-btn.complete {
  background: #52c41a;
  color: white;
}

.action-btn.cancel {
  background: #ff4d4f;
  color: white;
} 