.container {
  padding: 20rpx;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
}

.add-btn {
  background: #1890ff;
  color: white;
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
}

.service-list {
  margin-top: 20rpx;
}

.service-item {
  background: white;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.service-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.service-info {
  flex: 1;
}

.service-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.service-name {
  font-size: 32rpx;
  font-weight: bold;
}

.service-price {
  font-size: 28rpx;
  color: #f5222d;
}

.service-desc {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.service-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 24rpx;
  border-radius: 30rpx;
  margin: 0;
}

.action-btn.edit {
  background: #1890ff;
  color: white;
}

.action-btn.delete {
  background: #ff4d4f;
  color: white;
}

.edit-form {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.textarea {
  width: 100%;
  height: 200rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

.image-upload {
  width: 100%;
  background-color: #f5f5f5;
  border-radius: 8px;
  overflow: hidden;
}

.upload-content {
  width: 100%;
  height: 200px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.upload-placeholder {
  color: #999;
  font-size: 14px;
  text-align: center;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 10rpx;
}

.form-actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 40rpx;
}

.btn {
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
  margin: 0;
}

.btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.btn.save {
  background: #1890ff;
  color: white;
}

.time-slots-config {
  margin-top: 12rpx;
}

.time-slot-item {
  margin-bottom: 16rpx;
  background: #f5f5f5;
  padding: 16rpx;
  border-radius: 8rpx;
}

.time-slot-inputs {
  display: flex;
  align-items: center;
  gap: 12rpx;
  background: white;
  padding: 16rpx;
  border-radius: 8rpx;
}

.time-input {
  flex: 2;
  padding: 0;
  border-radius: 4rpx;
  font-size: 24rpx;
  border: 1rpx solid #eee;
}

.picker-content {
  padding: 8rpx 12rpx;
  color: #333;
}

.picker-content:empty::before {
  content: attr(placeholder);
  color: #999;
}

.time-separator {
  color: #666;
  padding: 0 8rpx;
}

.slots-input {
  flex: 1;
  padding: 8rpx 12rpx;
  border-radius: 4rpx;
  font-size: 24rpx;
  border: 1rpx solid #eee;
}

.delete-btn {
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  background: #ff4d4f;
  color: white;
  border-radius: 50%;
  font-size: 32rpx;
}

.add-time-slot-btn {
  margin-top: 20rpx;
  background: #1296db;
  color: white;
  font-size: 24rpx;
  padding: 12rpx 0;
  border-radius: 8rpx;
}

.available-days {
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: white;
  border-radius: 8rpx;
}

.sub-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.day-item {
  display: inline-flex;
  align-items: center;
  margin-right: 20rpx;
  margin-bottom: 10rpx;
  font-size: 24rpx;
}

.day-item checkbox {
  transform: scale(0.8);
  margin-right: 4rpx;
} 