.login-box {
  padding: 40rpx;
  background: #fff;
  border-radius: 12rpx;
  margin: 40rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 40rpx;
}

.input-group {
  margin-bottom: 20rpx;
}

.input-group input {
  width: 100%;
  height: 88rpx;
  border: 1px solid #ddd;
  border-radius: 8rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.btn-wechat {
  margin-top: 20rpx;
  background: #07c160;
  color: #fff;
}

.register-link {
  text-align: center;
  color: #1296db;
  margin-top: 20rpx;
} 